<?xml version="1.0"?>
<config>
    <modules>
        <MagicToolbox_MagicThumb>
            <version>4.16.0</version>
        </MagicToolbox_MagicThumb>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MagicToolbox_MagicThumb before="Mage_Adminhtml">MagicToolbox_MagicThumb</MagicToolbox_MagicThumb>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <magictoolbox translate="title" module="magicthumb">
                <title>Magic Toolbox</title>
                <sort_order>300</sort_order>
                <children>
                    <magicthumb translate="title" module="magicthumb">
                        <title>Magic Thumb settings</title>
                        <sort_order>10</sort_order>
                        <action>adminhtml/magicthumb/index</action>
                    </magicthumb>
                </children>
            </magictoolbox>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <magictoolbox>
                            <title>Magic Toolbox</title>
                            <sort_order>300</sort_order>
                            <children>
                                <magicthumb>
                                    <title>Magic Thumb settings</title>
                                    <sort_order>10</sort_order>
                                </magicthumb>
                            </children>
                        </magictoolbox>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <magicthumb>
                    <file>magicthumb.xml</file>
                </magicthumb>
            </updates>
        </layout>
        <events>
            <catalog_product_load_after>
                <observers>
                    <magicthumb_product_load_after>
                        <type>singleton</type>
                        <class>MagicToolbox_MagicThumb_Model_Observer</class>
                        <method>prepareProductVideosAttribute</method>
                    </magicthumb_product_load_after>
                </observers>
            </catalog_product_load_after>
            <adminhtml_catalog_product_edit_prepare_form>
                <observers>
                    <magicthumb_product_edit_prepare_form>
                        <type>singleton</type>
                        <class>MagicToolbox_MagicThumb_Model_Observer</class>
                        <method>prepareProductVideosElement</method>
                    </magicthumb_product_edit_prepare_form>
                </observers>
            </adminhtml_catalog_product_edit_prepare_form>
            <catalog_product_validate_after>
                <observers>
                    <magicthumb_product_validate_after>
                        <type>singleton</type>
                        <class>MagicToolbox_MagicThumb_Model_Observer</class>
                        <method>validateProductData</method>
                    </magicthumb_product_validate_after>
                </observers>
            </catalog_product_validate_after>
            <catalog_product_prepare_save>
                <observers>
                    <magicthumb_product_prepare_save>
                        <type>singleton</type>
                        <class>MagicToolbox_MagicThumb_Model_Observer</class>
                        <method>prepareProductVideosAttributeForSave</method>
                    </magicthumb_product_prepare_save>
                </observers>
            </catalog_product_prepare_save>
        </events>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <magicthumb module="MagicToolbox_MagicThumb">
                    <file>magicthumb.xml</file>
                </magicthumb>
            </updates>
        </layout>
        <events>
            <core_layout_update_updates_get_after>
                <observers>
                    <magicthumb>
                        <type>singleton</type>
                        <class>MagicToolbox_MagicThumb_Model_Observer</class>
                        <method>fixLayoutUpdates</method>
                    </magicthumb>
                </observers>
            </core_layout_update_updates_get_after>
            <controller_action_layout_generate_xml_before>
                <observers>
                    <magicthumb>
                        <type>singleton</type>
                        <class>MagicToolbox_MagicThumb_Model_Observer</class>
                        <method>addLayoutUpdate</method>
                    </magicthumb>
                </observers>
            </controller_action_layout_generate_xml_before>
        </events>
        <routers>
            <magicthumb>
                <use>standard</use>
                <args>
                    <module>MagicToolbox_MagicThumb</module>
                    <frontName>magicthumb</frontName>
                </args>
            </magicthumb>
        </routers>
        <default>
            <router>magicthumb</router>
        </default>
    </frontend>
    <global>
        <models>
            <magicthumb>
                <class>MagicToolbox_MagicThumb_Model</class>
                <resourceModel>magicthumb_mysql4</resourceModel>
            </magicthumb>
            <magicthumb_mysql4>
                <class>MagicToolbox_MagicThumb_Model_Mysql4</class>
                <entities>
                    <settings>
                        <table>magicthumb</table>
                    </settings>
                </entities>
            </magicthumb_mysql4>
        </models>
        <resources>
            <magicthumb_setup>
                <setup>
                    <module>MagicToolbox_MagicThumb</module>
                    <class>MagicToolbox_MagicThumb_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </magicthumb_setup>
            <magicthumb_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </magicthumb_write>
            <magicthumb_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </magicthumb_read>
        </resources>
        <blocks>
            <magicthumb>
                <class>MagicToolbox_MagicThumb_Block</class>
            </magicthumb>
            <catalog>
                <rewrite>
                    <product_new>MagicToolbox_MagicThumb_Block_Product_New</product_new>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <magicthumb>
                <class>MagicToolbox_MagicThumb_Helper</class>
            </magicthumb>
        </helpers>
    </global>
</config>
